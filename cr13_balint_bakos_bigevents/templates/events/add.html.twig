{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    {% if app.request.attributes.get("_route") == 'edit_event' %}
        <a href="/show/{{ id }}" class="btn btn-light mb-3"><i class="fa fa-backward"></i> Back</a>
    {% else %}
        <a href="/" class="btn btn-light mb-3"><i class="fa fa-backward"></i> Back</a>
    {% endif %}
    <br />
    
    <div class="row d-flex justify-content-center">
        <div class="col-12 col-lg-10 card card-body bg-light mb-4">
            {{ form_start(form) }}
            {{ form_end(form) }}
        </div>
    </div>

</div>
{% endblock %}